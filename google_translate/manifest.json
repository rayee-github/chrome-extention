{
  "name": "翻譯框選文字",
  "version": "1.0",
  "manifest_version": 2,
  "description": "框選文字並翻譯",
  
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "<all_urls>","activeTab"]
}